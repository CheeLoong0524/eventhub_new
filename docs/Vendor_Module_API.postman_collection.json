{
  "info": {
    "name": "EventHub - Vendor Module APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0",
    "description": "Postman collection for Vendor module (public, vendor, and admin APIs). Use the accompanying environment with base_url and token variables."
  },
  "item": [
    {
      "name": "Public",
      "item": [
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/events?status=active&per_page=10",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "events"
              ],
              "query": [
                { "key": "status", "value": "active" },
                { "key": "per_page", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Event By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["api","v1","events","{{event_id}}"]
            }
          }
        },
        {
          "name": "Get Vendor Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/vendors/{{vendor_id}}",
              "host": ["{{base_url}}"],
              "path": ["api","v1","vendors","{{vendor_id}}"]
            }
          }
        },
        {
          "name": "Search Vendors",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/vendors/search?query=food&per_page=10",
              "host": ["{{base_url}}"],
              "path": ["api","v1","vendors","search"],
              "query": [
                {"key": "query", "value": "food"},
                {"key": "per_page", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Event Applications (by Event)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/events/{{event_id}}/applications",
              "host": ["{{base_url}}"],
              "path": ["api","v1","events","{{event_id}}","applications"]
            }
          }
        },
        {
          "name": "Submit Event Application",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/events/{{event_id}}/apply",
              "host": ["{{base_url}}"],
              "path": ["api","v1","events","{{event_id}}","apply"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vendor_id\": {{vendor_id}},\n  \"booth_size\": \"10x10\",\n  \"booth_quantity\": 1,\n  \"service_type\": \"food\",\n  \"service_description\": \"Snacks and beverages\",\n  \"requested_price\": 1000\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Vendor Module (Events/Booths)",
      "item": [
        {
          "name": "Events with Booths",
          "request": {
            "method": "GET",
            "header": [],
            "url": {"raw": "{{base_url}}/api/v1/vendor/events","host":["{{base_url}}"],"path":["api","v1","vendor","events"]}
          }
        },
        {
          "name": "Accepting Applications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {"raw": "{{base_url}}/api/v1/vendor/events/accepting-applications?per_page=12","host":["{{base_url}}"],"path":["api","v1","vendor","events","accepting-applications"],"query":[{"key":"per_page","value":"12"}]}
          }
        },
        {
          "name": "Event Info (Vendor)",
          "request": {"method":"GET","header":[],"url":{"raw":"{{base_url}}/api/v1/vendor/events/{{event_id}}","host":["{{base_url}}"],"path":["api","v1","vendor","events","{{event_id}}"]}}
        },
        {
          "name": "Booth Info (Vendor)",
          "request": {"method":"GET","header":[],"url":{"raw":"{{base_url}}/api/v1/vendor/events/{{event_id}}/booths","host":["{{base_url}}"],"path":["api","v1","vendor","events","{{event_id}}","booths"]}}
        },
        {
          "name": "Update Booth Quantity (auth)",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/v1/vendor/events/{{event_id}}/booths/quantity","host":["{{base_url}}"],"path":["api","v1","vendor","events","{{event_id}}","booths","quantity"]},
            "body": {"mode":"raw","raw":"{\n  \"operation\": \"subtract\",\n  \"quantity\": 1\n}"}
          }
        }
      ]
    },
    {
      "name": "Vendor (Authenticated)",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [ {"key": "Authorization", "value": "Bearer {{token}}"} ],
            "url": {"raw":"{{base_url}}/api/v1/vendor/profile","host":["{{base_url}}"],"path":["api","v1","vendor","profile"]}
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw":"{{base_url}}/api/v1/vendor/profile","host":["{{base_url}}"],"path":["api","v1","vendor","profile"]},
            "body": {"mode":"raw","raw":"{\n  \"business_name\": \"My Business\",\n  \"business_type\": \"food\",\n  \"business_description\": \"We sell food\",\n  \"contact_person\": \"John Doe\",\n  \"contact_email\": \"john@example.com\",\n  \"contact_phone\": \"012-3456789\",\n  \"business_address\": \"123 Street\",\n  \"website\": \"https://example.com\"\n}"}
          }
        },
        {
          "name": "My Applications",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/vendor/applications","host":["{{base_url}}"],"path":["api","v1","vendor","applications"]}}
        },
        {
          "name": "My Bookings (Paid)",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/vendor/bookings","host":["{{base_url}}"],"path":["api","v1","vendor","bookings"]}}
        }
      ]
    },
    {
      "name": "Admin (Authenticated)",
      "item": [
        {
          "name": "List Vendors",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/vendors","host":["{{base_url}}"],"path":["api","v1","admin","vendors"]}}
        },
        {
          "name": "Get Vendor Details",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/vendors/{{vendor_id}}","host":["{{base_url}}"],"path":["api","v1","admin","vendors","{{vendor_id}}"]}}
        },
        {
          "name": "Approve Vendor",
          "request": {"method":"POST","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/vendors/{{vendor_id}}/approve","host":["{{base_url}}"],"path":["api","v1","admin","vendors","{{vendor_id}}","approve"]}}
        },
        {
          "name": "Reject Vendor",
          "request": {"method":"POST","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/vendors/{{vendor_id}}/reject","host":["{{base_url}}"],"path":["api","v1","admin","vendors","{{vendor_id}}","reject"]}}
        },
        {
          "name": "List Applications",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/applications","host":["{{base_url}}"],"path":["api","v1","admin","applications"]}}
        },
        {
          "name": "Application Details",
          "request": {"method":"GET","header":[{"key":"Authorization","value":"Bearer {{token}}"}],"url":{"raw":"{{base_url}}/api/v1/admin/applications/{{application_id}}","host":["{{base_url}}"],"path":["api","v1","admin","applications","{{application_id}}"]}}
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://127.0.0.1:8000" },
    { "key": "token", "value": "" },
    { "key": "event_id", "value": "1" },
    { "key": "vendor_id", "value": "1" },
    { "key": "application_id", "value": "1" }
  ]
}


